<Page x:Class="Library.Pages.BookListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
                <ResourceDictionary>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                        <Setter Property="Margin" Value="20, 0"/>
                    </Style>
                </ResourceDictionary>
            </StackPanel.Resources>
            <TextBox x:Name="TbSearch"
                     Width="200"
                     VerticalAlignment="Center"
                    TextChanged="TbSearch_TextChanged"/>
            <Button x:Name="BtnAdd"
                    Content="Добавить"
                    Click="BtnAdd_Click"/>
            <Button x:Name="BtnEdit"
                    Content="Редактировать"
                    Click="BtnEdit_Click"/>
            
        </StackPanel>
        <ListView x:Name="LvBooks"
                  ItemsSource="{Binding Books}"
                  Grid.Row="1">
            <ListView.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Название" 
                                        DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Автор" 
                                        DisplayMemberBinding="{Binding Author}"/>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="BtnDelete"
                                            Content="Удалить"
                                            Click="BtnDelete_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
            
        </ListView>
                  
    </Grid>
</Page>
